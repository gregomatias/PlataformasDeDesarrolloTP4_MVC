@model IEnumerable<TP4.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._pagado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._metodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._id_metodo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._usuario._id_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._pagado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._metodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._id_metodo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item._id_pago">Edit</a> |
                <a asp-action="Details" asp-route-id="@item._id_pago">Details</a> |
                <a asp-action="Delete" asp-route-id="@item._id_pago">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
