@model TP4.Models.CajaDeAhorro

@{
    ViewData["Title"] = "Depositar";
}

<h1>Depositar</h1>

<h4>CajaDeAhorro: @Model._cbu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Depositar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="_id_caja" />
            <div class="form-group">
             <input type="hidden" asp-for="_cbu" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="_saldo" class="control-label"></label>
                <input asp-for="_saldo" class="form-control" />
                <span asp-validation-for="_saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.id">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
